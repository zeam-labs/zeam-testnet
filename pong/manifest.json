{
  "web4": "1.0.0",
  "app": {
    "id": "",
    "name": "L1 Pong",
    "version": "1.0.0",
    "description": "Classic Pong with physics computed entirely by L1 distributed hash operations. The ultimate Web4 proof of concept.",
    "author": {
      "identity": "",
      "signature": ""
    },
    "repository": "https://github.com/anthropics/zeam",
    "license": "MIT"
  },
  "compute": {
    "type": "tick",
    "tickRate": 500,
    "payloadFormat": {
      "name": "pong-v1",
      "size": 35,
      "fields": [
        {"name": "magic", "offset": 0, "size": 2, "value": "0x5A50"},
        {"name": "version", "offset": 2, "size": 1},
        {"name": "tick", "offset": 3, "size": 8},
        {"name": "ballX", "offset": 11, "size": 2},
        {"name": "ballY", "offset": 13, "size": 2},
        {"name": "ballDX", "offset": 15, "size": 2, "encoding": "offset128"},
        {"name": "ballDY", "offset": 17, "size": 2, "encoding": "offset128"},
        {"name": "paddle1Y", "offset": 19, "size": 2},
        {"name": "paddle2Y", "offset": 21, "size": 2},
        {"name": "score1", "offset": 23, "size": 1},
        {"name": "score2", "offset": 24, "size": 1},
        {"name": "input1", "offset": 25, "size": 1},
        {"name": "input2", "offset": 26, "size": 1},
        {"name": "nonce", "offset": 27, "size": 8}
      ]
    },
    "hashInterpretation": {
      "description": "Hash bytes mapped to physics parameters",
      "mapping": [
        {"bytes": "0-1", "purpose": "paddle micro-adjustments"},
        {"bytes": "2-3", "purpose": "ball speed variation"},
        {"bytes": "4-5", "purpose": "wall bounce angles"},
        {"bytes": "6-7", "purpose": "paddle hit spin"},
        {"bytes": "8", "purpose": "ball reset direction"}
      ]
    }
  },
  "protocol": {
    "magic": "0x5A50",
    "magicAscii": "ZP",
    "version": 1
  },
  "game": {
    "field": {
      "width": 256,
      "height": 128
    },
    "paddle": {
      "height": 20,
      "width": 4,
      "margin": 8,
      "speed": 6
    },
    "ball": {
      "size": 4,
      "maxSpeed": 8,
      "initialDX": 3,
      "initialDY": 2
    },
    "scoring": {
      "winScore": 11
    }
  },
  "ui": {
    "type": "canvas",
    "minWidth": 640,
    "minHeight": 480,
    "controls": {
      "player1": {"up": "W", "down": "S"},
      "player2": {"up": "I/ArrowUp", "down": "K/ArrowDown"}
    }
  },
  "permissions": [],
  "economics": {
    "model": "free",
    "recipient": null
  }
}
