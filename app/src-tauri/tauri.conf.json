{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "ZEAM",
  "version": "0.1.0",
  "identifier": "com.zeam.app",
  "build": {
    "frontendDist": "http://127.0.0.1:19840",
    "devUrl": "http://127.0.0.1:19840"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ZEAM",
        "width": 900,
        "height": 700,
        "minWidth": 600,
        "minHeight": 400,
        "center": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/zeam-daemon"
    ],
    "windows": {
      "nsis": {
        "displayLanguageSelector": false,
        "installerHooks": "nsis-hooks.nsi"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
